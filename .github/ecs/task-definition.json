{
  "family": "shop-ecs-purchase-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::782683897698:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::782683897698:role/shop-ecs-purchase-api-role",
  "containerDefinitions": [
    {
      "name": "purchase-api",
      "image": "782683897698.dkr.ecr.ap-northeast-2.amazonaws.com/shop-purchase-api-ecr:latest",
      "portMappings": [
        { "containerPort": 8082, "hostPort": 8082, "protocol": "tcp" }
      ],
      "essential": true,
      "environment": [
        { "name": "SERVER_PORT", "value": "8082" },
        { "name": "SPRING_PROFILES_ACTIVE", "value": "prod" }
      ],
      "secrets": [
        {
          "name": "JWT_SECRET",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:782683897698:secret:nextshop/jwt-LrNUSm"
        },
        {
          "name": "SPRING_DATASOURCE_URL",
          "valueFrom": "arn:aws:ssm:ap-northeast-2:782683897698:parameter/nextshop/purchase/db/url"
        },
        {
          "name": "SPRING_DATASOURCE_USERNAME",
          "valueFrom": "arn:aws:ssm:ap-northeast-2:782683897698:parameter/nextshop/purchase/db/username"
        },
        {
          "name": "SPRING_DATASOURCE_PASSWORD",
          "valueFrom": "arn:aws:ssm:ap-northeast-2:782683897698:parameter/nextshop/purchase/db/password"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/aws/ecs/purchase-api",
          "awslogs-region": "ap-northeast-2",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
